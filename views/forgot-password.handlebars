<!-- Main Container -->
<main id="main-container">
    <!-- Page Content -->
    <div class="hero-static d-flex align-items-center">
        <div class="content">
            <div class="row justify-content-center push">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <!-- Sign Up Block -->
                    <div class="block block-rounded mb-0">
                        <div class="block-header block-header-default">
                            <h3 class="block-title">Create Account</h3>

                        </div>
                        <div class="block-content">
                            <div class="p-sm-3 px-lg-4 px-xxl-5 py-lg-5">
                                <h1 class="h2 mb-1">Password Reset</h1>
                                <p class="fw-medium text-muted">
                                    Please fill your email to process with resetting your password.
                                </p>


                                <form class="js-validation-signup" action="" method="POST">
                                    <div class="py-3">
                                        <div class="mb-4">
                                            <input type="email" class="form-control form-control-lg form-control-alt"
                                                id="signup-email" name="email" placeholder="Email">
                                        </div>
                                    </div>

                                    <div class="row mb-4">
                                        <div class="col-md-6 col-xl-5">
                                            <button type="submit" class="btn w-200 btn-alt-success">
                                                <i class="fa fa-fw fa-plus me-1 opacity-50"></i> Reset Password
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                {{#if messages.error}}
                                <div class="alert alert-danger alert-dismissible" role="alert">
                                    <p class="mb-0">
                                        {{messages.error}}
                                    </p>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                                </div>
                                {{/if}}
                                <!-- END Sign Up Form -->
                            </div>
                        </div>
                    </div>
                    <!-- END Sign Up Block -->
                </div>
            </div>

        </div>


    </div>
    <!-- END Page Content -->
</main>
<!-- END Main Container -->
</div>
<!-- END Page Container -->